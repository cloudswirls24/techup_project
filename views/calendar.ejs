<%- include("partials/header.ejs") %>

<div class="container">
    <h3>Meeting details</h3>
    <% if (locals.meetingTitle) { %>
    <ul>
        <li>Meeting Title: <%= meetingTitle %></li>
        <li>Date: <%= meetingDate %></li>
        <li>Time: <%= startTime %> to <%= endTime %></li>
        <li>Venue: <%= meetingVenue %></li>
        <li><%= daysAgenda %></li>
        <li><%= priorAgenda %></li>
        <li><%= daysClear %></li>
        <li><%= priorClear %></li>
        <li><%= daysSubmitMaterials %></li>
        <li><%= priorSubmitMaterials %></li>
        <li><%= daysCirculate %></li>
        <li><%= priorCirculate %></li>

    <% } %>
    </ul>

    <h3>Calendar invites</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Item</th>
          <th scope="col">Download</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Meeting invite</td>
          <td>
                <add-to-calendar-button
                name="<%= meetingTitle %>"
                description="A nice description does not hurt"
                startDate="<%= meetingDate %>"
                endDate="<%= meetingDate %>"
                startTime="<%= startTime %>"
                endTime="<%= endTime %>"
                location="<%= meetingVenue %>"
                options="['iCal','Microsoft365','Outlook.com',]"
                timeZone="Singapore"
                trigger="click"
                inline
                listStyle="modal"
                iCalFileName="Reminder-Event"
                />
          </td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Reminders for meeting milestones</td>
          <td></td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td>text</td>
        </tr>
      </tbody>
    </table>
  
    <a class="btn btn-primary" href="/email" role="button">Next</a>
  </div>

<%- include("partials/footer.ejs") %>